@{
    int count = 1;
}

@model IEnumerable<Product>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Number</th>
            <th scope="col">Color</th>
            <th scope="col">Standard Cost</th>
            <th scope="col">List Price</th>
            <th scope="col">Size</th>
            <th scope="col">Weight</th>
            <th scope="col">Sell Start Date</th>
            <th scope="col">Sell End Date</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Model</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@Html.DisplayFor(m => item.ProductName)</td>
                <td>@Html.DisplayFor(m => item.ProductNumber)</td>
                <td>@Html.DisplayFor(m => item.Color)</td>
                <td>@Html.DisplayFor(m => item.StandardCost)</td>
                <td>@Html.DisplayFor(m => item.ListPrice)</td>
                <td>@Html.DisplayFor(m => item.Size)</td>
                <td>@Html.DisplayFor(m => item.Weight)</td>
                <td>@Html.DisplayFor(m => item.SellStartDate)</td>
                <td>@Html.DisplayFor(m => item.SellEndDate)</td>
                <td>@Html.DisplayFor(m => item.ProductCategory.ProductCategoryName)</td>
                <td>@Html.DisplayFor(m => item.ProductModel.ProductModelName)</td>
            </tr>

            count++;
        }
    </tbody>
</table>